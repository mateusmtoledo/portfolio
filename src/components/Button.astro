---
const { class: classes, primary } = Astro.props;
const bgColor = primary
  ? "bg-indigo-600 hover:bg-transparent border-indigo-600"
  : "hover:border-indigo-600 hover:text-indigo-600";
---

<button
  class={`px-8 py-2 border-2 rounded-full transition-colors ${bgColor} ${classes}`}
>
  <slot />
</button>
