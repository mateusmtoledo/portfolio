---
import Project from "./Project.astro";
import FANCYBOOK_PREVIEW from "../../assets/img/projects/fancybook-preview.png";
import FANCYBOOK_LOGO from "../../assets/img/projects/fancybook-logo.png";
import { t } from "i18next";

const features = [
  t("projects.fancybook.features.0"),
  t("projects.fancybook.features.1"),
  t("projects.fancybook.features.2"),
];

const tags = ["Javascript", "React", "NodeJS", "MongoDB"];
---

<Project
  previewImg={FANCYBOOK_PREVIEW}
  logo={FANCYBOOK_LOGO}
  title="Fancybook"
  subtitle={t("projects.fancybook.subtitle")}
  features={features}
  tags={tags}
  repoHref="https://github.com/mateusmtoledo/fancybook"
  liveHref="https://fancybook.mateustoledo.com/"
/>
