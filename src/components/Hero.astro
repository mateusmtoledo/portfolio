---
import DownloadIcon from "../assets/img/icon/DownloadIcon.astro";
import Button from "./Button.astro";
import Container from "./Container.astro";
import i18next, { t } from "i18next";
import RESUME_FILE_EN from "../assets/resume/Mateus-Toledo-Resume.pdf";
import RESUME_FILE_BR from "../assets/resume/Mateus-Toledo-Curriculo.pdf";
const RESUME_FILE =
  i18next.language === "ptBR" ? RESUME_FILE_BR : RESUME_FILE_EN;
---

<section class="bg-stone-900 h-[640px] flex flex-col">
  <Container class="flex justify-between items-center w-full">
    <div>
      <h2 class="mb-4">
        <span class="text-3xl text-gray-400">{t("hero.hiThere")}</span>
        <br />
        <span class="text-6xl font-bold text-indigo-600">Mateus Toledo</span>
      </h2>
      <p class="text-3xl font-medium mb-16">{t("hero.role")}</p>
      <div class="grid gap-4 grid-cols-[repeat(auto-fill,160px)]">
        <a target="_blank" href={RESUME_FILE}>
          <Button class="w-full flex items-center gap-1">
            <DownloadIcon class="w-6 stroke-current stroke-[10px]" />
            <span>{t("hero.resume")}</span>
          </Button>
        </a>
        <a href="#contact">
          <Button class="w-full text-center" primary>
            {t("hero.contactMe")}
          </Button>
        </a>
      </div>
    </div>
  </Container>
</section>
