---
import GithubIcon from "../assets/img/icon/GithubIcon.astro";
import Button from "./Button.astro";
import { t } from "i18next";

const { href } = Astro.props;
---

<a href={href} target="_blank">
  <Button class="[&>*]:hover:fill-indigo-600 px-4 flex gap-2 items-center">
    <GithubIcon class="w-6 fill-white transition-all" />
    <p class="text-lg font-medium">{t("projects.repository")}</p>
  </Button>
</a>
