---
import ExternalLinkIcon from "../assets/img/icon/ExternalLinkIcon.astro";
import Button from "./Button.astro";
import { t } from "i18next";

const { href } = Astro.props;
---

<a href={href} target="_blank">
  <Button
    primary
    class="px-4 flex gap-2 items-center justify-center hover:bg-indigo-700 hover:border-indigo-700 w-full"
  >
    <ExternalLinkIcon class="w-4 fill-white transition-all" />
    <p class="text-lg font-medium">{t("projects.liveDemo")}</p>
  </Button>
</a>
